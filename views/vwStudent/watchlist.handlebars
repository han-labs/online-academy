<div class="container mt-4 mb-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h2 mb-1 fw-bold"><i class="bi bi-heart-fill" style="color: #764ba2;"></i> My Favorites</h1>
            <p class="text-muted mb-0">{{length courses}} courses in your collection</p>
        </div>
        <a href="/courses/search" class="btn btn-brand" style="background-color: #160438;">
            <i class="bi bi-search"></i> Explore Courses
        </a>
    </div>

    {{#if flash}}
    <div class="alert alert-{{flash.type}} alert-dismissible fade show border-0 shadow-sm">
        {{flash.message}}
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
    {{/if}}

    {{#if hasCourses}}
    <div class="row g-4">
        {{#each courses}}
        <div class="col-6 col-md-4 col-lg-3">
            <div class="card h-100 border-0 shadow-sm position-relative hover-lift">
                <a href="/courses/{{this.id}}" class="position-relative d-block">
                    <img class="card-img-top" src="{{this.cover}}" alt="{{this.title}}"
                        style="height: 160px; object-fit: cover;">
                    {{#if this.is_best_seller}}
                    <span class="badge position-absolute top-0 start-0 m-2" style="background-color: #764ba2;">
                        <i class="bi bi-award"></i> Best Seller
                    </span>
                    {{/if}}
                </a>
                <div class="card-body d-flex flex-column">
                    <h6 class="card-title mb-2 fw-semibold" style="height: 2.8em; overflow: hidden; line-height: 1.4;">
                        <a class="link-dark text-decoration-none" href="/courses/{{this.id}}">{{this.title}}</a>
                    </h6>
                    <div class="small text-muted mb-1">{{this.instructor_name}}</div>
                    <div class="small mb-2">
                        <i class="bi bi-star-fill text-warning"></i>
                        <span class="fw-semibold">{{formatNumber this.rating}}</span>
                        <span class="text-muted">({{formatNumber this.rating_count}})</span>
                    </div>

                    <div class="mt-auto">
                        {{#ifPromo this.price this.promo_price}}
                        <div class="mb-2">
                            <span class="fw-bold fs-6" style="color: #160438;">{{formatNumber this.promo_price}}₫</span>
                            <span class="text-decoration-line-through text-muted small ms-1">{{formatNumber
                                this.price}}₫</span>
                        </div>
                        {{else}}
                        <div class="fw-bold fs-6 mb-2" style="color: #160438;">{{formatNumber this.price}}₫</div>
                        {{/ifPromo}}

                        <form action="/student/watchlist/remove" method="POST" class="w-100">
                            <input type="hidden" name="course_id" value="{{this.id}}">
                            <button type="submit" class="btn btn-outline-danger btn-sm w-100">
                                Remove
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
    {{else}}
    <div class="text-center py-5">
        <div class="mb-4">
            <i class="bi bi-heart" style="font-size: 5rem; color: #764ba2; opacity: 0.3;"></i>
        </div>
        <h3 class="mb-2">Your favorites list is empty</h3>
        <p class="text-muted mb-4">Start adding courses you love to keep track of them here</p>
        <a href="/courses/search" class="btn btn-lg text-white" style="background-color: #160438;">
            <i class="bi bi-compass"></i> Browse Courses
        </a>
    </div>
    {{/if}}
</div>

<style>
    .hover-lift {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

    .hover-lift:hover {
        transform: translateY(-4px);
        box-shadow: 0 8px 20px rgba(22, 4, 56, 0.15) !important;
    }

    .btn[style*="background-color: #160438"]:hover {
        background-color: #2d0a5e !important;
        transform: translateY(-1px);
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        transition: all 0.3s ease;
    }

    .btn-outline-danger:hover {
        background-color: #dc3545;
        color: white;
    }
</style>