<script>
document.addEventListener('DOMContentLoaded', function() {
    // Smooth scroll for navigation
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
        anchor.addEventListener('click', function (e) {
            e.preventDefault();
            const target = document.querySelector(this.getAttribute('href'));
            if (target) {
                target.scrollIntoView({
                    behavior: 'smooth',
                    block: 'start'
                });
            }
        });
    });

    // Search functionality
    const policySearch = document.getElementById('policySearch');
    if (policySearch) {
        policySearch.addEventListener('input', function() {
            const searchTerm = this.value.toLowerCase();
            const policySections = document.querySelectorAll('.policy-section');
            const cards = document.querySelectorAll('.card');
            
            // Search through sections
            policySections.forEach(section => {
                const text = section.textContent.toLowerCase();
                if (text.includes(searchTerm)) {
                    section.style.display = 'block';
                } else {
                    section.style.display = 'none';
                }
            });

            // Highlight matching cards
            cards.forEach(card => {
                const text = card.textContent.toLowerCase();
                if (text.includes(searchTerm)) {
                    card.style.border = '2px solid #0d6efd';
                } else {
                    card.style.border = 'none';
                }
            });
        });
    }

    // Update current year in copyright
    const currentYear = new Date().getFullYear();
    document.querySelectorAll('p.text-muted small').forEach(el => {
        if (el.textContent.includes('2024')) {
            el.textContent = el.textContent.replace('2024', currentYear);
        }
    });
});
</script>