<link rel="stylesheet" href="/static/css/auth.css">

<div class="auth-wrapper">
    <div class="container">
        <div class="auth-card">
            <div class="auth-logo">
                <i class="bi bi-unlock" style="font-size:3rem;color:#5624d0;"></i>
                <h2 class="mt-3">Forgot password</h2>
                <p>Weâ€™ll send a 6-digit code to your email</p>
            </div>

            {{#if error}}
            <div class="alert alert-danger alert-custom"><i class="bi bi-exclamation-circle"></i> {{error}}</div>
            {{/if}}

            {{#if success}}
            <div class="alert alert-success alert-custom"><i class="bi bi-check-circle"></i> {{success}}</div>
            {{/if}}

            <form method="post" action="/account/forgot-password" class="auth-form">
                <div class="mb-3">
                    <label class="form-label" for="email"><i class="bi bi-envelope"></i> Email</label>
                    <input class="form-control" id="email" name="email" type="email" placeholder="name@example.com"
                        required autofocus>
                </div>
                <button class="btn btn-primary" type="submit"><i class="bi bi-send"></i> Send code</button>
            </form>

            <div class="auth-footer">
                <a href="/account/login"><i class="bi bi-arrow-left"></i> Back to Sign in</a>
            </div>
        </div>
    </div>
</div>