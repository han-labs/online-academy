<!-- Alerts via SweetAlert2 -->
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    document.addEventListener('DOMContentLoaded', () => {
        const p = new URLSearchParams(location.search);
        if (p.get('success') === '1') Swal.fire({ title: 'Success', text: 'Profile updated.', icon: 'success' });
        if (p.get('error') === '1') Swal.fire({ title: 'Error', text: 'Email is already in use.', icon: 'error' });
        if (p.get('error') === '2') Swal.fire({ title: 'Error', text: 'Full name and email are required.', icon: 'error' });
        if (p.get('error') === '3') Swal.fire({ title: 'Error', text: 'A server error occurred. Please try again.', icon: 'error' });
    });
</script>

<div class="container py-4">
    <div class="row">
        <!-- Sidebar -->
        <div class="col-lg-3 mb-4">
            <div class="card border-0 shadow-sm">
                <div class="card-header text-white border-0" style="background-color: #160438;">
                    <h6 class="mb-0"><i class="bi bi-person-circle"></i> Account Settings</h6>
                </div>
                <div class="list-group list-group-flush">
                    <a href="/account/profile" class="list-group-item list-group-item-action active border-0"
                        style="background-color: #667eea;">
                        <i class="bi bi-person-gear me-2"></i> Personal Information
                    </a>
                    <a href="/account/change-password" class="list-group-item list-group-item-action border-0">
                        <i class="bi bi-shield-lock me-2"></i> Change Password
                    </a>
                    {{!-- CHỈ hiển thị cho học viên --}}
                    {{#if (eq user.role 'student')}}
                    <a href="/student/watchlist" class="list-group-item list-group-item-action border-0">
                        <i class="bi bi-heart me-2"></i> Favorite Courses
                        <span class="badge rounded-pill float-end"
                            style="background-color: #764ba2;">{{stats.watchlists}}</span>
                    </a>
                    <a href="/account/my-courses" class="list-group-item list-group-item-action border-0">
                        <i class="bi bi-collection-play me-2"></i> My Courses
                        <span class="badge rounded-pill float-end"
                            style="background-color: #764ba2;">{{stats.enrollments}}</span>
                    </a>
                    {{/if}}

                    <form action="/account/logout" method="post" class="list-group-item border-0">
                        <button type="submit" class="btn btn-link text-danger p-0 border-0 text-start w-100">
                            <i class="bi bi-box-arrow-right me-2"></i> Log Out
                        </button>
                    </form>
                </div>
            </div>
        </div>

        <!-- Main Content -->
        <div class="col-lg-9">
            <!-- Header Card -->
            <div class="card mb-4 border-0 shadow-sm"
                style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                <div class="card-body text-center text-white py-4">
                    <div class="mb-3">
                        {{#if me.profile_picture_url}}
                        <img src="{{me.profile_picture_url}}" class="rounded-circle border border-3 border-white shadow"
                            style="width:100px;height:100px;object-fit:cover;" alt="avatar">
                        {{else}}
                        <div class="rounded-circle border border-3 border-white d-inline-flex align-items-center justify-content-center bg-white"
                            style="width:100px;height:100px;">
                            <i class="bi bi-person-circle" style="font-size:4.5rem;color:#764ba2;"></i>
                        </div>
                        {{/if}}
                    </div>
                    <h3 class="mb-1 fw-bold">Hi, {{me.full_name}}</h3>
                    <p class="mb-2 opacity-75">{{me.email}}</p>
                    <span
                        class="badge px-3 py-2 {{#if (eq user.role 'admin')}}bg-success{{else if (eq user.role 'instructor')}}bg-info{{else}}bg-light text-dark{{/if}}">
                        {{#if (eq user.role 'admin')}}Administrator{{else if (eq user.role
                        'instructor')}}Instructor{{else}}Student{{/if}}
                    </span>
                </div>
            </div>

            <div class="row">
                <!-- Profile Form -->
                <div class="col-md-8">
                    <div class="card border-0 shadow-sm">
                        <div class="card-header bg-white border-0 pt-4">
                            <h5 class="mb-0 fw-bold"><i class="bi bi-person-gear me-2" style="color: #764ba2;"></i>
                                Personal Information</h5>
                        </div>
                        <div class="card-body p-4">
                            <form id="frmProfile" method="post" action="/account/profile">
                                <div class="mb-4">
                                    <label class="form-label fw-semibold">Full Name</label>
                                    <input class="form-control form-control-lg" id="txtName" name="full_name"
                                        value="{{me.full_name}}" required>
                                </div>

                                <div class="mb-4">
                                    <label class="form-label fw-semibold">Email Address</label>
                                    <input class="form-control form-control-lg" id="txtEmail" type="email" name="email"
                                        value="{{me.email}}" {{#if (eq me.auth_provider 'google' )}}disabled{{/if}}
                                        required>
                                    {{#if (eq me.auth_provider 'google')}}
                                    <small class="text-muted d-block mt-2">
                                        <i class="bi bi-info-circle me-1"></i>Your email is linked with Google and
                                        cannot be changed here.
                                    </small>
                                    {{/if}}
                                </div>

                                <div class="d-flex gap-2 justify-content-end pt-3 border-top">
                                    <a class="btn btn-outline-secondary" href="/">Back to Home</a>
                                    <button class="btn text-white" style="background-color: #160438;">
                                        <i class="bi bi-check2-circle me-1"></i> Save Changes
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>

                <!-- Stats & Quick Actions -->
                <div class="col-md-4">
                    <div class="card border-0 shadow-sm mb-3">
                        <div class="card-header bg-white border-0 pt-4">
                            <h6 class="mb-0 fw-bold"><i class="bi bi-info-circle me-2" style="color: #764ba2;"></i>
                                Account Details</h6>
                        </div>
                        <div class="card-body">
                            <div class="mb-3 pb-3 border-bottom">
                                <small class="text-muted d-block mb-1">User ID</small>
                                <div class="fw-semibold text-break small">{{me.id}}</div>
                            </div>
                            <div class="mb-3 pb-3 border-bottom">
                                <small class="text-muted d-block mb-1">Account Type</small>
                                <div>
                                    <span
                                        class="badge {{#if (eq user.role 'admin')}}bg-success{{else if (eq user.role 'instructor')}}bg-info{{else}}bg-secondary{{/if}}">
                                        {{#if (eq user.role 'admin')}}Admin{{else if (eq user.role
                                        'instructor')}}Instructor{{else}}Student{{/if}}
                                    </span>
                                </div>
                            </div>
                            <div class="mb-3 pb-3 border-bottom">
                                <small class="text-muted d-block mb-1">Joined</small>
                                <div class="small">{{me.created_at}}</div>
                            </div>
                            {{#if (eq user.role 'student')}}
                            <div class="mb-3 pb-3 border-bottom">
                                <small class="text-muted d-block mb-1">Enrolled</small>
                                <div><span class="badge" style="background-color: #764ba2;">{{stats.enrollments}}</span>
                                    courses</div>
                            </div>
                            <div class="mb-3">
                                <small class="text-muted d-block mb-1">Watchlist</small>
                                <div><span class="badge" style="background-color: #764ba2;">{{stats.watchlists}}</span>
                                    courses</div>
                            </div>
                            {{/if}}
                        </div>
                    </div>

                    <div class="card border-0 shadow-sm">
                        <div class="card-header bg-white border-0 pt-4">
                            <h6 class="mb-0 fw-bold"><i class="bi bi-lightning-fill me-2" style="color: #764ba2;"></i>
                                Quick Actions</h6>
                        </div>
                        <div class="card-body">
                            <div class="d-grid gap-2">
                                <a href="/categories/1" class="btn btn-outline-secondary btn-sm">
                                    <i class="bi bi-collection me-1"></i> Courses
                                </a>
                                <form action="/account/logout" method="post" class="d-inline">
                                    <button class="btn btn-outline-danger btn-sm w-100">
                                        <i class="bi bi-box-arrow-right me-1"></i> Sign Out
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .list-group-item-action:hover {
        background-color: rgba(118, 75, 162, 0.05);
        border-left: 3px solid #764ba2 !important;
    }

    .btn[style*="background-color: #160438"]:hover {
        background-color: #2d0a5e !important;
        transform: translateY(-1px);
        transition: all 0.3s ease;
    }

    .card {
        transition: box-shadow 0.2s ease;
    }
</style>

<script>
    document.querySelector('#frmProfile')?.addEventListener('submit', (e) => {
        const name = document.querySelector('#txtName').value.trim();
        const emailEl = document.querySelector('#txtEmail');
        const email = emailEl?.disabled ? 'placeholder@google.local' : (emailEl?.value.trim() || '');
        if (!name || !email) {
            e.preventDefault();
            Swal.fire({ title: 'Error', text: 'Full name and email are required.', icon: 'error' });
        }
    });
</script>