<div class="container py-4">
    <div class="row">
        <!-- SIDEBAR NAVIGATION -->
        <div class="col-lg-3 mb-4">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h6 class="mb-0"><i class="bi bi-person-circle"></i> Tài khoản</h6>
                </div>
                <div class="list-group list-group-flush">
                    <a href="/account/profile" class="list-group-item list-group-item-action active">
                        <i class="bi bi-person-gear"></i> Thông tin cá nhân
                    </a>
                    <a href="/account/change-password" class="list-group-item list-group-item-action">
                        <i class="bi bi-shield-lock"></i> Đổi mật khẩu
                    </a>
                    <a href="/student/watchlist" class="list-group-item list-group-item-action">
                        <i class="bi bi-bookmark-heart"></i> Khóa học yêu thích
                        <span class="badge bg-primary rounded-pill float-end">{{stats.watchlists}}</span>
                    </a>
                    <a href="/account/my-courses" class="list-group-item list-group-item-action">
                        <i class="bi bi-collection-play"></i> Khóa học của tôi
                        <span class="badge bg-primary rounded-pill float-end">{{stats.enrollments}}</span>
                    </a>
                    <form action="/account/logout" method="post" class="list-group-item">
                        <button type="submit" class="btn btn-link text-danger p-0 border-0 text-start w-100">
                            <i class="bi bi-box-arrow-right"></i> Đăng xuất
                        </button>
                    </form>
                </div>
            </div>
        </div>

        <!-- MAIN CONTENT -->
        <div class="col-lg-9">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-person-gear"></i> Thông tin cá nhân</h5>
                </div>
                <div class="card-body">
                    <!-- Giữ nguyên form hiện tại -->
                    <form id="frmProfile" method="post" action="/account/profile">
                        <div class="mb-3">
                            <label class="form-label">Họ tên</label>
                            <input class="form-control" id="txtName" name="full_name" value="{{me.full_name}}" required>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Email</label>
                            <input class="form-control" id="txtEmail" type="email" name="email" value="{{me.email}}"
                                required>
                        </div>
                        <div class="d-flex gap-2 justify-content-end">
                            <button class="btn btn-primary">
                                <i class="bi bi-check2-circle"></i> Cập nhật
                            </button>
                            <a class="btn btn-secondary" href="/">
                                <i class="bi bi-house"></i> Về trang chủ
                            </a>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Thống kê (di chuyển xuống đây) -->
            <div class="card mt-4">
                <div class="card-header">
                    <h6 class="mb-0"><i class="bi bi-info-circle"></i> Thống kê tài khoản</h6>
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-6">
                            <div class="h4 text-primary">{{stats.enrollments}}</div>
                            <small class="text-muted">Khóa học đã ghi danh</small>
                        </div>
                        <div class="col-6">
                            <div class="h4 text-success">{{stats.watchlists}}</div>
                            <small class="text-muted">Khóa học yêu thích</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>