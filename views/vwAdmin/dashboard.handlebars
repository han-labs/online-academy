<!-- Page Title -->
  <div class="d-flex justify-content-between align-items-center pb-3 mb-4 border-bottom">
    <h2 class="fw-bold">Dashboard</h2>
  </div>

  {{#if error}}
  <div class="alert alert-warning alert-dismissible fade show" role="alert">
    <strong>Error:</strong> Something went wrong. Please try again.
    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
  </div>
  {{/if}}

  {{#if success}}
  <div class="alert alert-success alert-dismissible fade show" role="alert">
    <strong>Success:</strong> The operation has been completed successfully.
    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
  </div>
  {{/if}}

  <!-- Stats Cards -->
  <div class="row g-3 mb-4">
    <div class="col-md-3">
      <div class="card shadow-sm border-0 stats-card">
        <div class="card-body d-flex justify-content-between align-items-center">
          <div>
            <p class="text-muted mb-1">Students</p>
            <h3 class="fw-bold">{{stats.total_students}}</h3>
          </div>
          <i class="bi bi-people-fill stats-icon text-primary"></i>
        </div>
      </div>
    </div>

    <div class="col-md-3">
      <div class="card shadow-sm border-0 stats-card">
        <div class="card-body d-flex justify-content-between align-items-center">
          <div>
            <p class="text-muted mb-1">Instructors</p>
            <h3 class="fw-bold">{{stats.total_instructors}}</h3>
          </div>
          <i class="bi bi-person-check-fill stats-icon text-success"></i>
        </div>
      </div>
    </div>

    <div class="col-md-3">
      <div class="card shadow-sm border-0 stats-card">
        <div class="card-body d-flex justify-content-between align-items-center">
          <div>
            <p class="text-muted mb-1">Courses</p>
            <h3 class="fw-bold">{{stats.total_courses}}</h3>
          </div>
          <i class="bi bi-journal-bookmark-fill stats-icon text-warning"></i>
        </div>
      </div>
    </div>

    <div class="col-md-3">
      <div class="card shadow-sm border-0 stats-card">
        <div class="card-body d-flex justify-content-between align-items-center">
          <div>
            <p class="text-muted mb-1">Revenue</p>
            <h3 class="fw-bold">{{formatCurrency stats.total_revenue}}</h3>
          </div>
          <i class="bi bi-cash-stack stats-icon text-info"></i>
        </div>
      </div>
    </div>
  </div>

  <!-- Latest Courses -->
  <div class="card shadow-sm border-0">
    <div class="card-header">
      <h5 class="mb-0">Lastest courses</h5>
    </div>
    <div class="card-body">
      {{#if recentCourses.length}}
      <div class="table-responsive">
        <table class="table table-hover align-middle">
          <thead class="table-dark">
            <tr class="text-center">
              <th>Course Name</th>
              <th>Instructor</th>
              <th class="text-center">Price</th>
              <th class="text-center">Status</th>
              <th class="text-center">Created Date</th>
            </tr>
          </thead>
          <tbody>
            {{#each recentCourses}}
            <tr>
              <td>{{this.title}}</td>
              <td>{{this.instructor_name}}</td>
              <td class="text-center">{{formatCurrency this.price}}</td>
              <td class="text-center">
                <span class="badge bg-{{getStatusBadge this.status}}">
                  {{getStatusText this.status}}
                </span>
              </td>
              <td class="text-center">
                {{#if this.created_at}}
                {{formatDate this.created_at}}
                {{else if this.last_updated}}
                {{formatDate this.last_updated}}
                {{else}}
                <span class="text-muted">N/A</span>
                {{/if}}
              </td>
            </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
      {{else}}
      <p class="text-muted">No courses available.</p>
      {{/if}}
    </div>
  </div>


<style>
  .stats-card {
    transition: 0.2s;
  }

  .stats-card:hover {
    transform: translateY(-4px);
  }

  .stats-icon {
    font-size: 2rem;
    opacity: 0.85;
  }
</style>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">