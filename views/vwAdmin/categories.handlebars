<div class="container-fluid py-4">

  <!-- Title & Add Button -->
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="fw-bold">Category Management</h2>
    <a href="/admin/categories/add" class="btn btn-primary">
      <i class="bi bi-plus-circle me-1"></i> Add Category
    </a>
  </div>

  {{#if error}}
  <div class="alert alert-danger alert-dismissible fade show" role="alert">
    <strong>Error:</strong> Something went wrong. Please try again.
    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
  </div>
  {{/if}}

  {{#if success}}
  <div class="alert alert-success alert-dismissible fade show" role="alert">
    <strong>Success!</strong> The operation was completed successfully.
    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
  </div>
  {{/if}}

  <!-- Category Table -->
  <div class="card shadow-sm border-0">
    <div class="card-body">
      <div class="table-responsive">
        <table class="table align-middle table-hover">
          <thead class="table-dark">
            <tr class="text-center">
              <th>ID</th>
              <th>Category Name</th>
              <th>Type</th>
              <th>Parent Category</th>
              <th>Actions</th>
            </tr>
          </thead>

          <tbody>
            {{#each categories}}
            <tr>
              <td>{{id}}</td>
              <td class="fw-semibold">{{name}}</td>

              <td class="text-center">
                {{#if (eq parent_id null)}}
                <span class="badge bg-primary">Main Category</span>
                {{else}}
                <span class="badge bg-secondary">Subcategory</span>
                {{/if}}
              </td>

              <td class="text-center">{{#if parent_id}}{{parent_id}}{{else}}â€”{{/if}}</td>

              <td class="text-center">
                <div class="d-flex justify-content-center gap-2">

                  <a href="/admin/categories/detail/{{id}}" class="btn btn-sm btn-outline-primary" title="View Details">
                    <i class="bi bi-eye"></i>
                    View
                  </a>

                  <a href="/admin/categories/edit/{{id}}" class="btn btn-sm btn-warning" title="Edit">
                    <i class="bi bi-pencil"></i>
                    Edit
                  </a>

                  <form class="frmDeleteCategory d-inline" data-category-id="{{id}}" data-category-name="{{name}}"
                    action="/admin/categories/delete/{{id}}" method="POST">
                    <button type="submit" class="btn btn-sm btn-danger" title="Delete">
                      <i class="bi bi-trash"></i>
                      Delete
                    </button>
                  </form>

                </div>
              </td>
            </tr>
            {{/each}}
          </tbody>

        </table>
      </div>
    </div>
  </div>
</div>

<!-- Delete Confirmation Logic -->
<script>
  document.querySelectorAll(".frmDeleteCategory").forEach((form) => {
    form.addEventListener("submit", async function (e) {
      e.preventDefault();

      const id = this.dataset.categoryId;
      const name = this.dataset.categoryName;

      try {
        const res = await fetch(`/admin/categories/${id}/check-delete`);
        const data = await res.json();

        if (data.canDelete) {
          if (confirm(`Are you sure you want to delete category "${name}"?`)) {
            this.submit();
          }
        } else {
          let msg = `Cannot delete "${name}" because:\n`;

          if (data.courseCount > 0) msg += `- It contains ${data.courseCount} course(s)\n`;
          if (data.childrenCount > 0) msg += `- It has ${data.childrenCount} subcategory(ies)\n`;

          msg += `\nPlease remove or reassign related items first.`;
          alert(msg);
        }
      } catch (err) {
        alert("Error while checking deletion eligibility.");
        console.error(err);
      }
    });
  });
</script>

