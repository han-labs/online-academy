<div class="container py-4">
    <div class="row mx-auto">
        <!-- Header -->
        <div class="d-flex align-items-center mb-4">
            <a href="/courses/{{course.id}}" class="btn btn-outline-secondary btn-sm me-3">
                <i class="bi bi-arrow-left"></i>
            </a>
            <h2 class="mb-0">Checkout</h2>
        </div>
        <div class="border-top my-3"></div>
        <div class="col-lg-8">


            <!-- Course Information -->
            <div class="card mb-4">
                <div class="card-header" style="background-color: #beccfc; border-left: 4px solid #6079f7;">
                    <h5 class="mb-0"><i class="bi bi-cart-check"></i> Course</h5>
                </div>
                <div class="card-body" style="background-color: #e0e7ff; border-left: 4px solid #a5b4fc;">
                    <div class="row">
                        <div class="col-md-3">
                            <img src="{{course.image_url}}" class="img-fluid rounded" alt="{{course.title}}">
                        </div>
                        <div class="col-md-9">
                            <h5>{{course.title}}</h5>
                            <p class="text-muted mb-2">{{course.instructor_name}}</p>
                            <div class="d-flex align-items-center mb-2">
                                <span class="text-warning me-2">{{formatNumber course.rating}}</span>
                                <span class="text-muted">({{formatNumber course.rating_count}} reviews)</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Payment Methods -->
            <div class="card">
                <div class="card-header" style="background-color: #beccfc; border-left: 4px solid #6079f7;">
                    <h5 class="mb-0"><i class="bi bi-credit-card"></i> Payment Method</h5>
                </div>
                <div class="card-body" style="background-color: #e0e7ff; border-left: 4px solid #a5b4fc;">
                    <div class="alert alert-info">
                        <i class="bi bi-info-circle"></i>
                        <strong>Demo Payment:</strong> This is a simulated payment page.
                        Click "Complete Payment" to continue.
                    </div>

                    <div class="form-check mb-3">
                        <input class="form-check-input" type="radio" name="paymentMethod" id="creditCard" checked>
                        <label class="form-check-label" for="creditCard">
                            <i class="bi bi-credit-card-2-front"></i> Credit/Debit Card
                        </label>
                    </div>

                    <div class="form-check mb-3">
                        <input class="form-check-input" type="radio" name="paymentMethod" id="momo">
                        <label class="form-check-label" for="momo">
                            <i class="bi bi-wallet2"></i> MoMo E-Wallet
                        </label>
                    </div>

                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="paymentMethod" id="bankTransfer">
                        <label class="form-check-label" for="bankTransfer">
                            <i class="bi bi-bank"></i> Bank Transfer
                        </label>
                    </div>
                </div>
            </div>
        </div>

        <!-- Order Summary Sidebar -->
        <div class="col-lg-4">
            <div class="card position-sticky" style="top: 20px;">
                <div class="card-header" style="background-color: #beccfc; border-left: 4px solid #6079f7;">
                    <h5 class="mb-0"><i class="bi bi-receipt"></i> Order Summary</h5>
                </div>
                <div class="card-body" style="background-color: #e0e7ff; border-left: 4px solid #a5b4fc;">
                    <div class="d-flex justify-content-between mb-2">
                        <span>Original Price:</span>
                        <span>{{formatNumber course.price}}₫</span>
                    </div>

                    {{#ifPromo course.price course.promotional_price}}
                    <div class="d-flex justify-content-between mb-2">
                        <span>Discount:</span>
                        <span class="text-danger">-{{formatNumber (sub course.price course.promotional_price)}}₫</span>
                    </div>
                    {{/ifPromo}}

                    <hr>

                    <div class="d-flex justify-content-between mb-3">
                        <strong>Total:</strong>
                        <strong class="text-success h5">
                            {{#ifPromo course.price course.promotional_price}}
                            {{formatNumber course.promotional_price}}₫
                            {{else}}
                            {{formatNumber course.price}}₫
                            {{/ifPromo}}
                        </strong>
                    </div>

                    <!-- Terms - Bắt buộc phải tick -->
                    <div class="mb-3">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="agreeTerms" required>
                            <label class="form-check-label" for="agreeTerms">
                                I agree to the <a href="/policy" target="_blank">terms of service</a> and <a
                                    href="/policy" target="_blank">refund policy</a>
                                <span class="text-danger">*</span>
                            </label>
                        </div>
                        <div class="invalid-feedback" id="termsError">
                            You must agree to the terms and conditions to proceed with payment.
                        </div>
                    </div>

                    <!-- Payment Button -->
                    <form action="/checkout/{{course.id}}/process" method="POST" id="paymentForm" novalidate>
                        <button type="submit" class="btn btn-success w-100 btn-lg" id="btnCheckout" disabled>
                            <i class="bi bi-lock-fill"></i> Complete Payment
                        </button>
                    </form>

                    <div class="text-center mt-3">
                        <small class="text-muted">
                            <i class="bi bi-shield-check"></i>
                            Secure and encrypted payment
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        const agreeTerms = document.getElementById('agreeTerms');
        const btnCheckout = document.getElementById('btnCheckout');
        const termsError = document.getElementById('termsError');
        const paymentForm = document.getElementById('paymentForm');

        // Enable/disable checkout button based on checkbox
        agreeTerms.addEventListener('change', function () {
            btnCheckout.disabled = !this.checked;
            if (this.checked) {
                termsError.style.display = 'none';
                agreeTerms.classList.remove('is-invalid');
            }
        });

        // Form submission validation
        paymentForm.addEventListener('submit', function (e) {
            if (!agreeTerms.checked) {
                e.preventDefault();
                termsError.style.display = 'block';
                agreeTerms.classList.add('is-invalid');

                // Scroll to terms checkbox
                agreeTerms.scrollIntoView({
                    behavior: 'smooth',
                    block: 'center'
                });
                return;
            }

            // Loading state
            btnCheckout.disabled = true;
            btnCheckout.innerHTML = '<i class="bi bi-hourglass-split"></i> Processing...';
        });

        // Real-time validation
        agreeTerms.addEventListener('change', function () {
            if (this.checked) {
                this.classList.remove('is-invalid');
                termsError.style.display = 'none';
            }
        });
    });
</script>

<style>
    .form-check-input:invalid {
        border-color: #dc3545;
    }

    .form-check-input:valid {
        border-color: #198754;
    }

    .invalid-feedback {
        display: none;
    }

    #btnCheckout:disabled {
        opacity: 0.6;
        cursor: not-allowed;
    }

    .text-danger {
        color: #dc3545 !important;
    }
</style>