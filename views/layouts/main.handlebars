<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>{{#if @title}}{{@title}} | {{/if}}Online Academy</title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

  {{#if isLearningPage}}
  <link rel="stylesheet" href="https://cdn.plyr.io/3.7.8/plyr.css" />
  {{/if}}

  <link rel="stylesheet" href="/static/css/style.css">
</head>

<body class="bg-light">
  {{> _header}}

  {{!-- Udemy-style top bar only on learning page --}}
  {{#if isLearningPage}}
  <nav class="navbar navbar-light bg-white border-bottom py-2">
    <div class="container-fluid">
      <div class="d-flex align-items-center">
        <a href="/" class="text-decoration-none text-muted small">
          <i class="bi bi-house me-1"></i>Main page
        </a>
        <span class="text-muted mx-2 small">â€º</span>
        <a href="/courses/{{course.id}}" class="text-decoration-none text-dark small text-truncate"
          style="max-width: 300px;" title="{{course.title}}">
          {{course.title}}
        </a>
      </div>

      {{#if canReview}}
      <button class="btn btn-warning fw-bold px-3 py-2 shadow-sm rating-top-btn" 
              data-bs-toggle="modal" 
              data-bs-target="#ratingModal">
        <i class="bi bi-star-fill me-2"></i>LEAVE RATING
      </button>
      {{/if}}
    </div>
  </nav>
  {{/if}}

  <main class="{{#if isLearningPage}}container-fluid{{else}}container{{/if}} py-4">
    {{{body}}}
  </main>

  {{> _footer}}

  {{#if isLearningPage}}
  {{> _ratingModal }}
  {{/if}}

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

  {{#if isLearningPage}}
  <script src="https://cdn.plyr.io/3.7.8/plyr.polyfilled.js"></script>
  {{/if}}

  <script src="/static/js/main.js"></script>

  {{#if isLearningPage}}
  <script src="/static/js/rating.js"></script>
  {{/if}}
</body>

</html>