{{!-- TinyMCE (CDN chuáº©n) --}}
<script src="https://cdn.tiny.cloud/1/hw9pfh30njixlu4voz8ag8msnnnr4ofingpiklyaaie8hhdy/tinymce/6/tinymce.min.js"
  referrerpolicy="origin"></script>
<script>
  document.addEventListener('DOMContentLoaded', function () {
    // Init TinyMCE an toÃ n (trÃ¡nh double-init)
    const ensureInit = (selector, opts) => {
      const el = document.querySelector(selector);
      if (!el || !window.tinymce) return;
      const inst = tinymce.get(el.id);
      if (!inst) tinymce.init(opts);
    };

    // Short Description (nháº¹)
    ensureInit('#shortDescEditor', {
      selector: '#shortDescEditor',
      height: 200,
      menubar: false,
      plugins: 'lists link emoticons',
      toolbar: 'undo redo | formatselect | bold italic | alignleft aligncenter alignright | bullist numlist | link emoticons',
      statusbar: false
    });

    // Detailed Description (Ä‘áº§y Ä‘á»§)
    ensureInit('#detailedDescEditor', {
      selector: '#detailedDescEditor',
      height: 450,
      menubar: 'edit insert view format table tools',
      plugins: 'advlist autolink lists link image charmap preview anchor searchreplace visualblocks code fullscreen insertdatetime media table help wordcount emoticons',
      toolbar: 'undo redo | blocks | bold italic underline strikethrough | forecolor backcolor | alignleft aligncenter alignright alignjustify | bullist numlist outdent indent | removeformat | link image media table | emoticons charmap | preview code fullscreen | help',
      image_advtab: true,
      image_caption: true
    });

    // Cover preview
    const input = document.getElementById('coverInput');
    const preview = document.getElementById('coverPreview');
    if (input && preview) {
      input.addEventListener('change', (e) => {
        const file = e.target.files && e.target.files[0];
        if (file) preview.src = URL.createObjectURL(file);
      });
    }

    // Video source toggle cho táº¥t cáº£ modal
    document.querySelectorAll('[name^="video_source"]').forEach(radio => {
      radio.addEventListener('change', function () {
        const value = this.value;
        const id = this.name.replace('video_source_', '');
        const urlDiv = document.getElementById('urlInput_' + id);
        const fileDiv = document.getElementById('fileInput_' + id);
        if (!urlDiv || !fileDiv) return;

        if (value === 'url') {
          urlDiv.style.display = 'block';
          fileDiv.style.display = 'none';
          const fileInput = fileDiv.querySelector('input');
          const urlInput = urlDiv.querySelector('input');
          fileInput && fileInput.removeAttribute('required');
          urlInput && urlInput.setAttribute('required', 'required');
        } else {
          urlDiv.style.display = 'none';
          fileDiv.style.display = 'block';
          const fileInput = fileDiv.querySelector('input');
          const urlInput = urlDiv.querySelector('input');
          urlInput && urlInput.removeAttribute('required');
          fileInput && fileInput.setAttribute('required', 'required');
        }
      });
    });

    // (Tuá»³ chá»n) Di chuyá»ƒn modal vá» body Ä‘á»ƒ Ä‘áº£m báº£o z-index
    const selector = '#addChapterModalCourse,[id^="addLectureModal"],[id^="editLectureModal"],[id^="deleteLectureModal"],[id^="editChapterModal"],[id^="deleteChapterModal"]';
    document.querySelectorAll(selector).forEach(m => {
      if (m && m.parentElement !== document.body) document.body.appendChild(m);
    });
  });
</script>

