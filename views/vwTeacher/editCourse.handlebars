{{!-- vwTeacher/editCourse.handlebars --}}

<div class="container my-5">
  <div class="d-flex flex-wrap justify-content-between align-items-center mb-4">
    <div>
      <h2 class="fw-bold mb-1" style="color:#160438;">
        <i class="bi bi-pencil-square me-2"></i> Edit Course: {{course.title}}
      </h2>
      <p class="text-muted mb-0">Update basic info and manage content.</p>
    </div>
  </div>

  {{!-- Basic Course Info --}}
  <form action="/teacher/course/{{course.id}}/edit" method="POST" enctype="multipart/form-data"
    class="card border-0 shadow p-4 rounded-3 mb-5">
    <h4 class="mb-3 fw-semibold" style="color:#160438;">
      <i class="bi bi-info-circle me-2"></i> Basic Information
    </h4>

    <div class="mb-3">
      <label class="fw-semibold">Course Title <span class="text-danger">*</span></label>
      <input type="text" name="title" class="form-control" value="{{course.title}}" required>
    </div>

    <div class="mb-3">
      <label class="fw-semibold">Cover Image</label>
      <div class="row g-3">
        <div class="col-md-8">
          <input type="file" name="image" class="form-control mb-2" id="coverInput" accept="image/*">
          <small class="text-muted">Recommended: 1200Ã—675px (16:9). Leave empty to keep current.</small>
        </div>
        <div class="col-md-4">
          <div class="border rounded p-2 bg-light d-flex align-items-center justify-content-center"
            style="height:140px;">
            {{#if course.image_url}}
            <img id="coverPreview" src="{{course.image_url}}" alt="cover" class="img-fluid rounded shadow-sm"
              style="max-height:120px; object-fit:cover;">
            {{else}}
            <img id="coverPreview" src="/static/images/default-course.jpg" alt="cover"
              class="img-fluid rounded shadow-sm" style="max-height:120px; object-fit:cover;">
            {{/if}}
          </div>
        </div>
      </div>
    </div>

    <div class="mb-3">
      <label class="fw-semibold">Category <span class="text-danger">*</span></label>
      <select name="category_id" class="form-select" required>
        <option value="" disabled {{#unless selectedCategoryId}}selected{{/unless}}>-- Select Category --</option>
        {{#each categoriesTree}}
        <optgroup label="ðŸ“ {{this.name}}">
          {{#each this.children}}
          <option value="{{this.id}}" {{#if (eq ../../selectedCategoryId this.id)}}selected{{/if}}>
            â€” {{this.name}}
          </option>
          {{/each}}
        </optgroup>
        {{/each}}
      </select>
    </div>

    <div class="row">
      <div class="col-md-6 mb-3">
        <label class="fw-semibold">Original Price (VND) <span class="text-danger">*</span></label>
        <div class="input-group">
          <span class="input-group-text bg-light"><i class="bi bi-cash-coin"></i></span>
          <input type="number" name="price" class="form-control" value="{{course.price}}" required min="0">
        </div>
      </div>
      <div class="col-md-6 mb-3">
        <label class="fw-semibold">Promotional Price (VND)</label>
        <div class="input-group">
          <span class="input-group-text bg-light"><i class="bi bi-percent"></i></span>
          <input type="number" name="promotional_price" class="form-control" value="{{course.promotional_price}}"
            min="0">
        </div>
      </div>
    </div>

    {{!-- Short Description with WYSIWYG --}}
    <div class="mb-3">
      <label class="fw-semibold">Short Description <span class="text-danger">*</span></label>
      <textarea name="short_description" id="shortDescEditor" class="form-control wysiwyg-editor" rows="3" required>
        {{course.short_description}}
      </textarea>
      <small class="text-muted">Brief summary for course listings.</small>
    </div>

    {{!-- Detailed Description with WYSIWYG --}}
    <div class="mb-3">
      <label class="fw-semibold">Detailed Description</label>
      <textarea name="detailed_description" id="detailedDescEditor" class="form-control wysiwyg-editor" rows="6">
        {{course.detailed_description}}
      </textarea>
      <small class="text-muted">Complete course information with formatting.</small>
    </div>

    <div class="mb-3">
      <label class="fw-semibold">Publication Status</label>
      <select name="status" class="form-control">
        <option value="draft" {{#ifEquals course.status "draft" }}selected{{/ifEquals}}>Draft (Not Published)</option>
        <option value="published" {{#ifEquals course.status "published" }}selected{{/ifEquals}}>Published</option>
      </select>
    </div>

    <button type="submit" class="btn btn-brand w-100 mt-2">
      <i class="bi bi-check-circle"></i> Update Course Information
    </button>
  </form>

  {{!-- Course Content Management --}}
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h3 class="mb-0" style="color:#2d0a5e;"><i class="bi bi-book me-2"></i> Course Content (Chapters & Lectures)</h3>
    <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addChapterModalCourse">
      <i class="bi bi-plus-circle"></i> Add New Chapter
    </button>
  </div>

  {{#if chapters.length}}
  {{#each chapters}}
  <div class="card mb-3 shadow-sm rounded-3">
    <div class="card-header d-flex justify-content-between align-items-center text-white" style="background:#160438;">
      <div>
        <strong>Chapter {{chapter_order}}: {{title}}</strong>
        <span class="badge bg-light text-dark ms-2">
          {{#if (lookup ../lectures id)}}
          {{length (lookup ../lectures id)}} lectures
          {{else}}
          0 lectures
          {{/if}}
        </span>
      </div>
      <div class="d-flex gap-1">
        <button class="btn btn-sm btn-warning" data-bs-toggle="modal" data-bs-target="#editChapterModal{{id}}">
          <i class="bi bi-pencil"></i> Edit
        </button>
        <button class="btn btn-sm btn-danger" data-bs-toggle="modal" data-bs-target="#deleteChapterModal{{id}}">
          <i class="bi bi-trash"></i> Delete
        </button>
      </div>
    </div>

    <div class="card-body">
      {{#if (lookup ../lectures id)}}
      <div class="table-responsive">
        <table class="table table-sm table-hover align-middle">
          <thead class="table-light">
            <tr>
              <th width="50">#</th>
              <th>Lecture Name</th>
              <th width="120">Duration</th>
              <th width="100">Preview</th>
              <th width="150">Actions</th>
            </tr>
          </thead>
          <tbody>
            {{#each (lookup ../lectures id)}}
            <tr>
              <td>{{lecture_order}}</td>
              <td>{{title}}</td>
              <td>{{#if duration_minutes}}{{duration_minutes}} min{{else}}-{{/if}}</td>
              <td>
                {{#if is_preview_allowed}}
                <span class="badge bg-success">Yes</span>
                {{else}}
                <span class="badge bg-secondary">No</span>
                {{/if}}
              </td>
              <td>
                <button class="btn btn-sm btn-warning" data-bs-toggle="modal" data-bs-target="#editLectureModal{{id}}">
                  <i class="bi bi-pencil"></i>
                </button>
                <button class="btn btn-sm btn-danger" data-bs-toggle="modal" data-bs-target="#deleteLectureModal{{id}}">
                  <i class="bi bi-trash"></i>
                </button>
              </td>
            </tr>

            {{!-- Edit Lecture Modal --}}
            <div class="modal fade" id="editLectureModal{{id}}" tabindex="-1" data-bs-backdrop="static"
              data-bs-keyboard="false" data-bs-scroll="true">
              <div class="modal-dialog modal-lg">
                <div class="modal-content">
                  <form action="/teacher/lecture/{{id}}/edit" method="POST" enctype="multipart/form-data">
                    <div class="modal-header">
                      <h5 class="modal-title">Edit Lecture: {{title}}</h5>
                      <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body">
                      <div class="mb-3">
                        <label class="fw-semibold">Lecture Name <span class="text-danger">*</span></label>
                        <input type="text" name="title" class="form-control" value="{{title}}" required>
                      </div>

                      {{!-- Video Upload or URL Selection --}}
                      <div class="mb-3">
                        <label class="fw-semibold d-block mb-2">Video Source <span class="text-danger">*</span></label>
                        <div class="btn-group mb-3 w-100" role="group">
                          <input type="radio" class="btn-check" name="video_source_{{id}}" id="url_{{id}}" value="url"
                            checked>
                          <label class="btn btn-outline-primary" for="url_{{id}}">
                            <i class="bi bi-link-45deg"></i> Video URL
                          </label>
                          <input type="radio" class="btn-check" name="video_source_{{id}}" id="upload_{{id}}"
                            value="upload">
                          <label class="btn btn-outline-primary" for="upload_{{id}}">
                            <i class="bi bi-cloud-upload"></i> Upload Video File
                          </label>
                        </div>

                        {{!-- URL Input --}}
                        <div id="urlInput_{{id}}" class="video-input-section">
                          <input type="text" name="video_url" class="form-control" value="{{video_url}}"
                            placeholder="https://www.youtube.com/watch?v=... or direct video URL">
                          <small class="text-muted">Support: YouTube, Vimeo, or direct video links</small>
                        </div>

                        {{!-- File Upload --}}
                        <div id="fileInput_{{id}}" class="video-input-section" style="display:none;">
                          <input type="file" name="video_file" class="form-control" accept="video/*">
                          <small class="text-muted">Max file size: 500MB. Supported: MP4, WebM, MOV</small>
                          {{#if video_url}}
                          <div class="alert alert-info mt-2 mb-0">
                            <i class="bi bi-info-circle"></i> Current:
                            {{#if (startsWith video_url "/uploads/")}}
                            <strong>Uploaded file</strong>
                            {{else}}
                            <strong>{{video_url}}</strong>
                            {{/if}}
                          </div>
                          {{/if}}
                        </div>
                      </div>

                      <div class="mb-3">
                        <label class="fw-semibold">Duration (minutes)</label>
                        <input type="number" name="duration_minutes" class="form-control" value="{{duration_minutes}}"
                          min="0">
                      </div>
                      <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="is_preview_allowed" id="preview{{id}}"
                          {{#if is_preview_allowed}}checked{{/if}}>
                        <label class="form-check-label" for="preview{{id}}">Allow free preview</label>
                      </div>
                    </div>
                    <div class="modal-footer">
                      <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                      <button type="submit" class="btn btn-primary">Save Changes</button>
                    </div>
                  </form>
                </div>
              </div>
            </div>

            {{!-- Delete Lecture Modal --}}
            <div class="modal fade" id="deleteLectureModal{{id}}" tabindex="-1" data-bs-backdrop="static"
              data-bs-keyboard="false" data-bs-scroll="true">
              <div class="modal-dialog">
                <div class="modal-content">
                  <form action="/teacher/lecture/{{id}}/delete" method="POST">
                    <div class="modal-header bg-danger text-white">
                      <h5 class="modal-title">Confirm Delete</h5>
                      <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body">
                      <p>Are you sure you want to delete the lecture <strong>"{{title}}"</strong>?</p>
                      <p class="text-danger"><i class="bi bi-exclamation-triangle"></i> This action cannot be undone!
                      </p>
                    </div>
                    <div class="modal-footer">
                      <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                      <button type="submit" class="btn btn-danger">Delete</button>
                    </div>
                  </form>
                </div>
              </div>
            </div>

            {{/each}}
          </tbody>
        </table>
      </div>
      {{else}}
      <p class="text-muted mb-0">No lectures yet.</p>
      {{/if}}

      <div class="border-top pt-3 mt-3">
        <button class="btn btn-success btn-sm" data-bs-toggle="modal" data-bs-target="#addLectureModal{{id}}">
          <i class="bi bi-plus-circle"></i> Add Lecture to This Chapter
        </button>
      </div>

      {{!-- Add Lecture Modal --}}
      <div class="modal fade" id="addLectureModal{{id}}" tabindex="-1" data-bs-backdrop="static"
        data-bs-keyboard="false" data-bs-scroll="true">
        <div class="modal-dialog modal-lg">
          <div class="modal-content">
            <form action="/teacher/chapter/{{id}}/lecture/add" method="POST" enctype="multipart/form-data">
              <div class="modal-header bg-success text-white">
                <h5 class="modal-title">Add Lecture to Chapter {{chapter_order}}</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
              </div>
              <div class="modal-body">
                <div class="mb-3">
                  <label class="fw-semibold">Lecture Name <span class="text-danger">*</span></label>
                  <input type="text" name="title" class="form-control" placeholder="Ex: Introduction to React Hooks"
                    required>
                </div>

                {{!-- Video Upload or URL Selection --}}
                <div class="mb-3">
                  <label class="fw-semibold d-block mb-2">Video Source <span class="text-danger">*</span></label>
                  <div class="btn-group mb-3 w-100" role="group">
                    <input type="radio" class="btn-check" name="video_source_new_{{id}}" id="url_new_{{id}}" value="url"
                      checked>
                    <label class="btn btn-outline-primary" for="url_new_{{id}}">
                      <i class="bi bi-link-45deg"></i> Video URL
                    </label>
                    <input type="radio" class="btn-check" name="video_source_new_{{id}}" id="upload_new_{{id}}"
                      value="upload">
                    <label class="btn btn-outline-primary" for="upload_new_{{id}}">
                      <i class="bi bi-cloud-upload"></i> Upload Video File
                    </label>
                  </div>

                  {{!-- URL Input --}}
                  <div id="urlInput_new_{{id}}" class="video-input-section">
                    <input type="text" name="video_url" class="form-control"
                      placeholder="https://www.youtube.com/watch?v=...">
                    <small class="text-muted">Support: YouTube, Vimeo, or direct video links</small>
                  </div>

                  {{!-- File Upload --}}
                  <div id="fileInput_new_{{id}}" class="video-input-section" style="display:none;">
                    <input type="file" name="video_file" class="form-control" accept="video/*">
                    <small class="text-muted">Max file size: 500MB. Supported: MP4, WebM, MOV</small>
                  </div>
                </div>

                <div class="mb-3">
                  <label class="fw-semibold">Duration (minutes)</label>
                  <input type="number" name="duration_minutes" class="form-control" placeholder="Ex: 15" min="0">
                </div>
                <div class="form-check">
                  <input class="form-check-input" type="checkbox" name="is_preview_allowed" id="previewNew{{id}}">
                  <label class="form-check-label" for="previewNew{{id}}">Allow free preview</label>
                </div>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="submit" class="btn btn-success">Add Lecture</button>
              </div>
            </form>
          </div>
        </div>
      </div>

      {{!-- Edit Chapter Modal --}}
      <div class="modal fade" id="editChapterModal{{id}}" tabindex="-1" data-bs-backdrop="static"
        data-bs-keyboard="false" data-bs-scroll="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <form action="/teacher/chapter/{{id}}/edit" method="POST">
              <div class="modal-header">
                <h5 class="modal-title">Edit Chapter {{chapter_order}}</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
              </div>
              <div class="modal-body">
                <div class="mb-3">
                  <label class="fw-semibold">Chapter Name</label>
                  <input type="text" name="title" class="form-control" value="{{title}}" required>
                </div>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="submit" class="btn btn-primary">Save</button>
              </div>
            </form>
          </div>
        </div>
      </div>

      {{!-- Delete Chapter Modal --}}
      <div class="modal fade" id="deleteChapterModal{{id}}" tabindex="-1" data-bs-backdrop="static"
        data-bs-keyboard="false" data-bs-scroll="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <form action="/teacher/chapter/{{id}}/delete" method="POST">
              <div class="modal-header bg-danger text-white">
                <h5 class="modal-title">Confirm Chapter Delete</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
              </div>
              <div class="modal-body">
                <p>Are you sure you want to delete <strong>Chapter {{chapter_order}}: {{title}}</strong>?</p>
                <p class="text-danger mb-0"><i class="bi bi-exclamation-triangle"></i> All lectures in this chapter will
                  also be deleted!</p>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="submit" class="btn btn-danger">Delete Chapter</button>
              </div>
            </form>
          </div>
        </div>
      </div>

    </div>
  </div>
  {{/each}}
  {{else}}
  <div class="alert alert-info text-center">
    <i class="bi bi-info-circle"></i> No chapters have been created yet. Add your first chapter!
  </div>
  {{/if}}
</div>

