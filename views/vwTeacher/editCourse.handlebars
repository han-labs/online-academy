<script>
  // Cover preview (UI only)
  document.addEventListener('DOMContentLoaded', function () {
    const input = document.getElementById('coverInput');
    const preview = document.getElementById('coverPreview');
    if (input && preview) {
      input.addEventListener('change', (e) => {
        const file = e.target.files?.[0];
        if (file) preview.src = URL.createObjectURL(file);
      });
    }
  });

  // Đưa tất cả modal về body 1 lần, KHÔNG ép khởi tạo instance hàng loạt
  document.addEventListener('DOMContentLoaded', function () {
    const selector =
      '#addChapterModalCourse,' +
      '[id^="addLectureModal"],[id^="editLectureModal"],[id^="deleteLectureModal"],' +
      '[id^="editChapterModal"],[id^="deleteChapterModal"]';

    document.querySelectorAll(selector).forEach(m => {
      if (m && m.parentElement !== document.body) {
        document.body.appendChild(m); // move only once
      }
    });
  });

  // Dọn backdrop thừa nếu có (phòng trường hợp browser render đè)
  document.addEventListener('hidden.bs.modal', function () {
    const backs = document.querySelectorAll('.modal-backdrop');
    if (backs.length > 1) {
      backs.forEach((b, i) => { if (i < backs.length - 1) b.remove(); });
    }
  });
</script>

