  <a href="/teacher/dashboard" class="btn btn-secondary">
    <i class="bi bi-arrow-left"></i> Back to Dashboard
  </a>
  <a href="/teacher/course/{{course.id}}/detail" class="btn btn-info">
    <i class="bi bi-eye"></i> View Details
  </a>
</div>

