  }

  .table-row-hover {
    transition: background-color .15s ease;
  }

  .table-row-hover:hover {
    background: #faf7ff;
  }

  .action-group .btn-action {
    min-width: 96px;
    font-weight: 500;
  }

  .btn-action-details {
    color: #160438;
    border: 1px solid #d8cdf3;
    background: #f3f0ff;
  }

  .btn-action-details:hover {
    color: #fff;
    background: #160438;
    border-color: #160438;
  }

  .btn-action-edit {
    color: #2d0a5e;
    border: 1px solid #e5d9ff;
    background: #efe9ff;
  }

  .btn-action-edit:hover {
    color: #fff;
    background: #2d0a5e;
    border-color: #2d0a5e;
  }

  .btn-action-delete {
    color: #a52834;
    border: 1px solid #f3c2c7;
    background: #fdecef;
  }

  .btn-action-delete:hover {
    color: #fff;
    background: #a52834;
    border-color: #a52834;
  }
</style>