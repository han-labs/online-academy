{{!-- vwTeacher/profile.handlebars --}}

<div class="container my-5">
  <h2 class="mb-4 fw-bold text-center" style="color:#160438;">
    <i class="bi bi-person-badge me-2"></i> Instructor Profile
  </h2>

  <form action="/teacher/profile" method="POST" enctype="multipart/form-data"
    class="card border-0 shadow p-4 rounded-3 mb-5">

    <div class="row g-4">
      <div class="col-md-4 text-center">
        <label class="fw-semibold d-block mb-2">Profile Picture</label>
        {{#if user.profile_picture_url}}
        <img src="{{user.profile_picture_url}}" alt="Avatar" class="img-thumbnail rounded-circle mb-3"
          style="width:150px; height:150px; object-fit:cover;">
        {{else}}
        <img src="/images/default-avatar.png" alt="Avatar" class="img-thumbnail rounded-circle mb-3"
          style="width:150px; height:150px; object-fit:cover;">
        {{/if}}
        <input type="file" name="profile_picture" class="form-control" accept="image/*">
        <small class="text-muted d-block mt-2">This picture will appear in your instructor profile</small>
      </div>

      <div class="col-md-8">
        <div class="mb-3">
          <label class="fw-semibold">Full Name <span class="text-danger">*</span></label>
          <input type="text" name="full_name" class="form-control" value="{{user.full_name}}" required>
        </div>

        <div class="mb-3">
          <label class="fw-semibold">Email</label>
          <input type="email" name="email" class="form-control" value="{{user.email}}" required readonly>
          <small class="text-muted">Email cannot be changed</small>
        </div>
      </div>
    </div>

    <div class="mb-3">
      <label class="fw-semibold">Bio <span class="text-danger">*</span></label>
      <textarea name="bio" class="form-control" rows="5"
        placeholder="Share your teaching experience, achievements, skills..."
        required>{{user.instructor_bio}}</textarea>
      <small class="text-muted">This information will be visible to students on your courses</small>
    </div>

    <button type="submit" class="btn btn-brand w-100">
      <i class="bi bi-check-circle"></i> Update Profile
    </button>
  </form>

  <div class="d-flex flex-wrap justify-content-between align-items-center mb-3">
    <div class="mb-2">
      <h3 class="mb-1" style="color:#2d0a5e;">
        <i class="bi bi-easel me-2"></i> Your Courses
      </h3>
      <p class="text-muted mb-0">Manage details and keep your content up to date.</p>
    </div>
    <a href="/teacher/course/add" class="btn btn-primary d-inline-flex align-items-center">
      <i class="bi bi-plus-circle me-2"></i> Add New Course
    </a>
  </div>

  {{#if courses.length}}
  <div class="card border-0 shadow-sm rounded-3">
    <div class="card-header d-flex justify-content-between align-items-center" style="background:#f7f5fb;">
      <span class="fw-semibold" style="color:#160438;">
        <i class="bi bi-journal-text me-2"></i> Your Courses
      </span>
      <span class="badge rounded-pill" style="background:#160438;">{{length courses}} total</span>
    </div>

    <div class="table-responsive">
      <table class="table align-middle mb-0">
        <thead class="table-light sticky-top" style="top:0; z-index:1;">
          <tr class="text-uppercase small text-muted">
            <th style="width:64px;">#</th>
            <th>Course</th>
            <th style="width:160px;">Price</th>
            <th style="width:160px;">Status</th>
            <th style="width:140px;">Enrollments</th>
            <th class="text-end" style="width:280px;">Actions</th>
          </tr>
        </thead>
        <tbody>
          {{#each courses}}
          <tr class="table-row-hover">
            <td class="fw-semibold">{{add @index 1}}</td>

            <td>
              <a href="/teacher/course/{{id}}/detail" class="fw-semibold text-decoration-none link-dark">
                {{title}}
              </a>
            </td>

            <td>
              {{#ifPromo price promotional_price}}
              <span class="fw-semibold text-danger">{{formatNumber promotional_price}}₫</span>
              <small class="text-muted text-decoration-line-through ms-1">{{formatNumber price}}₫</small>
              {{else}}
              <span class="fw-semibold">{{formatNumber price}}₫</span>
              {{/ifPromo}}
            </td>

            {{!-- STATUS: view-only (no inline edit) --}}
            <td>
              {{#if (eq status "published")}}
              <span class="badge bg-success" title="Change status in Edit">Published</span>
              {{else if (eq status "completed")}}
              <span class="badge bg-info" title="Change status in Edit">Completed</span>
              {{else if (eq status "draft")}}
              <span class="badge bg-warning text-dark" title="Change status in Edit">Draft</span>
              {{else}}
              <span class="badge bg-secondary" title="Change status in Edit">Unknown</span>
              {{/if}}
            </td>

            {{!-- ENROLLMENTS with fallback fields --}}
            <td>
              <span class="d-inline-flex align-items-center">
                <i class="bi bi-people me-2 text-muted"></i>
                {{#if students}}
                {{formatNumber students}}
                {{else if total_students}}
                {{formatNumber total_students}}
                {{else if enrollments}}
                {{formatNumber enrollments}}
                {{else if enroll_count}}
                {{formatNumber enroll_count}}
                {{else}}
                0
                {{/if}}
              </span>
            </td>

            <td class="text-end">
              <div class="btn-group btn-group-sm action-group" role="group" aria-label="actions">
                <a href="/teacher/course/{{id}}/detail" class="btn btn-action btn-action-details">
                  <i class="bi bi-eye me-1"></i> Details
                </a>
                <a href="/teacher/course/{{id}}/edit" class="btn btn-action btn-action-edit">
                  <i class="bi bi-pencil-square me-1"></i> Edit
                </a>
                <form action="/teacher/profile/course/{{id}}/delete" method="POST" class="d-inline"
                  onsubmit="return confirm('Are you sure you want to delete this course?');">
                  <button type="submit" class="btn btn-action btn-action-delete">
                    <i class="bi bi-trash me-1"></i> Delete
                  </button>
                </form>
              </div>
            </td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>
  {{else}}
  <div class="alert d-flex align-items-center justify-content-between mt-3 border-0 shadow-sm"
    style="background:linear-gradient(135deg,#667eea 0%,#764ba2 100%); color:#fff;">
    <div class="d-flex align-items-center">
      <i class="bi bi-info-circle-fill fs-4 me-2"></i>
      <div>
        <div class="fw-semibold">You have not published any courses yet.</div>
        <small class="opacity-75">Start by creating your first course now.</small>
      </div>
    </div>
    <a href="/teacher/course/add" class="btn btn-light btn-sm">
      <i class="bi bi-plus-circle me-1"></i> Create one now
    </a>
  </div>
  {{/if}}
</div>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    const fileInput = document.querySelector('input[name="profile_picture"]');
    const avatarImg = document.querySelector('.img-thumbnail');
    if (fileInput && avatarImg) {
      fileInput.addEventListener('change', (event) => {
        const file = event.target.files?.[0];
        if (!file) return;
        const reader = new FileReader();
        reader.onload = (e) => { avatarImg.src = e.target.result; };
        reader.readAsDataURL(file);
      });
    }
  });
</script>

