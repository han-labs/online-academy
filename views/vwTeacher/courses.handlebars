<h2 class="mb-4">📚 Danh sách khóa học của tôi</h2>

<div class="mb-3">
  <a href="/teacher/courses/add" class="btn btn-success">+ Thêm khóa học</a>
</div>

{{#if courses.length}}
  <div class="table-responsive">
    <table class="table table-striped align-middle">
      <thead>
        <tr>
          <th>#</th>
          <th>Tên khóa học</th>
          <th>Giá</th>
          <th>Ngày tạo</th>
          <th>Hành động</th>
        </tr>
      </thead>
      <tbody>
        {{#each courses}}
        <tr>
          <td>{{@index}}</td>
          <td>{{this.title}}</td>
          <td>{{formatNumber this.price}} đ</td>
          <td>{{this.created_at}}</td>
          <td>
            <a href="/teacher/courses/{{this.id}}/edit" class="btn btn-sm btn-warning">Sửa</a>
            <form action="/teacher/courses/{{this.id}}/delete" method="post" style="display:inline;">
              <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Xóa khóa học này?');">
                Xóa
              </button>
            </form>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
{{else}}
  <p>🙅 Bạn chưa tạo khóa học nào.</p>
{{/if}}
