{{!-- vwTeacher/addCourse.handlebars --}}

<div class="container my-5">
  {{!-- Page heading + helper --}}
  <div class="d-flex flex-wrap justify-content-between align-items-end mb-4">
    <div>
      <h2 class="fw-bold mb-1" style="color:#160438;">
        <i class="bi bi-easel2 me-2"></i> Add New Course
      </h2>
      <p class="text-muted mb-0">Fill out the basic information to create your course.</p>
    </div>
    <a href="/teacher/dashboard" class="btn btn-outline-secondary">
      <i class="bi bi-arrow-left"></i> Back to Dashboard
    </a>
  </div>

  {{!-- Progress / step vibe (UI only) --}}
  <div class="mb-4">
    <div class="d-flex align-items-center small">
      <span class="badge rounded-pill me-2" style="background:#160438;">1</span>
      <span class="me-3">Basic Info</span>
      <div class="flex-grow-1 border-top" style="opacity:.2;"></div>
      <span class="badge rounded-pill mx-2 bg-light text-muted">2</span>
      <span class="text-muted">Curriculum</span>
    </div>
  </div>

  <form action="/teacher/course/add" method="POST" enctype="multipart/form-data"
    class="card border-0 shadow-sm rounded-3">
    <div class="card-header" style="background:#f7f5fb;">
      <strong style="color:#160438;"><i class="bi bi-info-circle me-2"></i>Basic Information</strong>
    </div>

    <div class="card-body">

      {{!-- Title --}}
      <div class="mb-3">
        <label class="form-label fw-semibold">Course Title <span class="text-danger">*</span></label>
        <input type="text" name="title" class="form-control" placeholder="e.g. Advanced React & TypeScript" required>
      </div>

      {{!-- Cover image with preview --}}
      <div class="mb-3">
        <label class="form-label fw-semibold">Cover Image</label>
        <div class="row g-3">
          <div class="col-md-8">
            <input type="file" name="image" class="form-control" id="coverInput" accept="image/*">
            <small class="text-muted">Recommended: 1200Ã—675px (16:9)</small>
          </div>
          <div class="col-md-4">
            <div class="border rounded p-2 bg-light d-flex align-items-center justify-content-center"
              style="height:140px;">
              <img id="coverPreview" src="/static/images/default-course.jpg" class="img-fluid rounded shadow-sm"
                style="max-height:120px; object-fit:cover;" alt="Cover preview">
            </div>
          </div>
        </div>
      </div>

      {{!-- Category --}}
      <div class="mb-3">
        <label class="form-label fw-semibold">Category <span class="text-danger">*</span></label>
        <select name="category_id" class="form-select" required>
          <option value="" disabled selected>-- Select Category --</option>
          {{#each categoriesTree}}
          <optgroup label="ðŸ“ {{this.name}}">
            {{#each this.children}}
            <option value="{{this.id}}" {{#if (eq ../../selectedCategoryId this.id)}}selected{{/if}}>
              â€” {{this.name}}
            </option>
            {{/each}}
          </optgroup>
          {{/each}}
        </select>
      </div>

      {{!-- Price row --}}
      <div class="row">
        <div class="col-md-6 mb-3">
          <label class="form-label fw-semibold">Price (VND) <span class="text-danger">*</span></label>
          <div class="input-group">
            <span class="input-group-text bg-light"><i class="bi bi-cash-coin"></i></span>
            <input type="number" name="price" class="form-control" min="0" step="1" required placeholder="e.g. 499000">
          </div>
          <small class="text-muted">Set the base price of your course.</small>
        </div>

        <div class="col-md-6 mb-3">
          <label class="form-label fw-semibold">Promotional Price</label>
          <div class="input-group">
            <span class="input-group-text bg-light"><i class="bi bi-percent"></i></span>
            <input type="number" name="promotional_price" class="form-control" min="0" step="1" placeholder="Optional">
          </div>
          <small class="text-muted">Leave empty if no promotion.</small>
        </div>
      </div>

      {{!-- Short description with WYSIWYG --}}
      <div class="mb-3">
        <label class="form-label fw-semibold">Short Description <span class="text-danger">*</span></label>
        <textarea name="short_description" id="shortDescEditor" class="form-control wysiwyg-editor" rows="4"></textarea>
        <small class="text-muted">A concise summary that appears in listings (2-3 sentences).</small>
      </div>

      {{!-- Detailed description with WYSIWYG --}}
      <div class="mb-1">
        <label class="form-label fw-semibold">Detailed Description <span class="text-danger">*</span></label>
        <textarea name="detailed_description" id="detailedDescEditor" class="form-control wysiwyg-editor"
          rows="8"></textarea>
      </div>
      <small class="text-muted">Use formatting, lists, imagesâ€¦ to describe content & outcomes.</small>
    </div>

    <div class="card-footer d-flex justify-content-between align-items-center">
      <span class="small text-muted">You can edit everything later.</span>
      <button type="submit" class="btn btn-brand px-4">
        <i class="bi bi-check2-circle me-1"></i> Add Course
      </button>
    </div>
  </form>
</div>

{{!-- TinyMCE --}}
