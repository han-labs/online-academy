<nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom">
    <div class="container">
        <a class="navbar-brand fw-bold text-dark" href="/">
            Online Academy
        </a>

        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarMain">
            {{!-- Categories Dropdown --}}
            <ul class="navbar-nav me-auto">
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle text-dark" href="#" role="button" data-bs-toggle="dropdown">
                        Danh mục
                    </a>
                    <ul class="dropdown-menu">
                        {{#each global_categories_tree}}
                        <li>
                            <a class="dropdown-item fw-bold" href="/categories/{{id}}">
                                {{name}}
                            </a>
                        </li>
                        {{#if children}}
                        {{#each children}}
                        <li>
                            <a class="dropdown-item ps-4 small text-muted" href="/categories/{{id}}">
                                {{name}}
                            </a>
                        </li>
                        {{/each}}
                        {{/if}}
                        {{#unless @last}}<li><hr class="dropdown-divider"></li>{{/unless}}
                        {{/each}}
                    </ul>
                </li>
            </ul>

            {{!-- Search Form --}}
            <form class="d-flex mx-auto" action="/courses/search" method="GET" style="max-width: 400px; width: 100%;">
                <div class="input-group">
                    <input class="form-control" 
                           type="text" 
                           name="q" 
                           id="searchInput"
                           placeholder="Tìm kiếm..." 
                           aria-label="Search">
                    <button class="btn btn-link text-secondary position-absolute end-0 top-50 translate-middle-y border-0 bg-transparent d-none" 
                            type="button" 
                            id="clearSearch"
                            style="z-index: 5; right: 50px !important;">
                        <i class="bi bi-x-lg"></i>
                    </button>
                    <button class="btn btn-outline-secondary" type="submit">
                        <i class="bi bi-search"></i>
                    </button>
                </div>
            </form>

            {{!-- Right Menu --}}
            <ul class="navbar-nav ms-auto">
                {{#if user}}
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle text-dark" href="#" role="button" data-bs-toggle="dropdown">
                        {{user.full_name}}
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end">
                        <li><a class="dropdown-item" href="/account/profile">Hồ sơ</a></li>
                        <li><a class="dropdown-item" href="/account/my-courses">Khóa học của tôi</a></li>
                        <li><a class="dropdown-item" href="/account/watchlist">Yêu thích</a></li>
                        {{#if (eq user.role 'admin')}}
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item" href="/admin">Quản trị</a></li>
                        {{/if}}
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item" href="/account/logout">Đăng xuất</a></li>
                    </ul>
                </li>
                {{else}}
                <li class="nav-item">
                    <a class="nav-link text-dark" href="/account/login">Đăng nhập</a>
                </li>
                <li class="nav-item">
                    <a class="btn btn-dark text-white ms-2 px-3" href="/account/register">
                        Đăng ký
                    </a>
                </li>
                {{/if}}
            </ul>
        </div>
    </div>
</nav>

<script>
// Clear search functionality
document.addEventListener('DOMContentLoaded', function() {
    const searchInput = document.getElementById('searchInput');
    const clearBtn = document.getElementById('clearSearch');
    
    if (searchInput && clearBtn) {
        // Show/hide clear button based on input value
        function toggleClearButton() {
            if (searchInput.value.trim().length > 0) {
                clearBtn.classList.remove('d-none');
            } else {
                clearBtn.classList.add('d-none');
            }
        }
        
        // Check on input
        searchInput.addEventListener('input', toggleClearButton);
        
        // Check on keyup (for better responsiveness)
        searchInput.addEventListener('keyup', toggleClearButton);
        
        // Clear input on click
        clearBtn.addEventListener('click', function(e) {
            e.preventDefault();
            e.stopPropagation();
            searchInput.value = '';
            clearBtn.classList.add('d-none');
            searchInput.focus();
        });
        
        // Check initial value on page load
        toggleClearButton();
    }
});
</script>