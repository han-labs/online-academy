<div class="reviews-section">
    <div class="row">
        <!-- Overall Rating & Breakdown -->
        <div class="col-md-4">
            <div class="card border-0">
                <div class="card-body text-center">
                    <h2 class="text-warning mb-1">{{course.rating}}</h2>
                    <div class="star-rating-large mb-2">
                        {{#stars course.rating}}★{{/stars}}
                    </div>
                    <p class="text-muted mb-0">Course Rating</p>
                    <p class="small text-muted">({{course.rating_count}} ratings)</p>
                </div>
            </div>
            
            <!-- Rating Breakdown -->
            <div class="card mt-3 border-0">
                <div class="card-body">
                    <h5 class="card-title">Rating Breakdown</h5>
                    {{#if ratingStats}}
                        {{#each ratingStats}}
                        <div class="rating-breakdown-item mb-2">
                            <div class="d-flex align-items-center">
                                <span class="small me-2">{{this.stars}}★</span>
                                <div class="progress flex-grow-1" style="height: 8px;">
                                    <div class="progress-bar bg-warning" 
                                         style="width: {{this.percentage}}%"></div>
                                </div>
                                <span class="small ms-2 text-muted">{{this.percentage}}%</span>
                            </div>
                        </div>
                        {{/each}}
                    {{else}}
                        <p class="text-muted small">No rating data available</p>
                    {{/if}}
                </div>
            </div>
        </div>
        
        <!-- Reviews List -->
        <div class="col-md-8">
            {{#if reviews}}
                {{#each reviews}}
                <div class="review-item mb-4 p-3 border rounded">
                    <div class="d-flex align-items-start mb-2">
                        {{#if user_avatar}}
                        <img src="{{user_avatar}}" alt="{{user_name}}" class="rounded-circle me-3"
                            style="width: 48px; height: 48px; object-fit: cover;">
                        {{else}}
                        <div class="rounded-circle bg-secondary text-white d-flex align-items-center justify-content-center me-3"
                            style="width: 48px; height: 48px;">
                            {{substring user_name 0 1}}
                        </div>
                        {{/if}}
                        <div class="flex-grow-1">
                            <div class="d-flex justify-content-between align-items-start">
                                <div>
                                    <h6 class="mb-1">{{user_name}}</h6>
                                    <div class="star-rating text-warning mb-1">
                                        {{#stars rating}}★{{/stars}}
                                    </div>
                                </div>
                                <small class="text-muted">{{formatDate created_at}}</small>
                            </div>
                            <p class="mb-0 text-dark">{{comment}}</p>
                        </div>
                    </div>
                </div>
                {{/each}}
            {{else}}
                <div class="text-center py-5 text-muted">
                    <i class="bi bi-star display-1"></i>
                    <h4 class="mt-3">No Reviews Yet</h4>
                    <p>Be the first to review this course!</p>
                </div>
            {{/if}}
        </div>
    </div>
</div>