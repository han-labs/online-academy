<div class="row">
    {{!-- Sidebar Filters --}}
    <div class="col-md-3 mb-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title mb-3">Bộ lọc</h5>

                {{!-- Search by keyword --}}
                <form action="/courses/search" method="GET" class="mb-3">
                    <label class="form-label fw-bold">Từ khóa</label>
                    <div class="input-group">
                        <input type="text" class="form-control" name="q" value="{{q}}" placeholder="Tìm khóa học...">
                        <button class="btn btn-primary" type="submit">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                class="bi bi-search" viewBox="0 0 16 16">
                                <path
                                    d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001q.044.06.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1 1 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0" />
                            </svg>
                        </button>
                    </div>
                    {{#if categoryId}}
                    <input type="hidden" name="category" value="{{categoryId}}">
                    {{/if}}
                </form>

                {{!-- Category filter --}}
                {{#if categoryInfo}}
                <div class="mb-3">
                    <label class="form-label fw-bold">Lĩnh vực</label>
                    <div class="alert alert-info mb-0 py-2">
                        {{categoryInfo.name}}
                        <a href="/courses/search?q={{q}}" class="float-end">✕</a>
                    </div>
                </div>
                {{else}}
                <div class="mb-3">
                    <label class="form-label fw-bold">Lĩnh vực</label>
                    <div class="list-group list-group-flush">
                        {{#each global_categories_tree}}
                        <button
                            class="list-group-item list-group-item-action d-flex justify-content-between align-items-center border-0 px-0"
                            onclick="filterByCategory({{id}})">
                            {{name}}
                        </button>
                        {{/each}}
                    </div>
                </div>
                {{/if}}

                {{!-- Sort options --}}
                <div class="mb-3">
                    <label class="form-label fw-bold">Sắp xếp</label>
                    <select class="form-select" id="sortSelect" onchange="changeSort()">
                        <option value="rating_desc" {{#if (eq sort 'rating_desc' )}}selected{{/if}}>
                            Đánh giá cao nhất
                        </option>
                        <option value="price_asc" {{#if (eq sort 'price_asc' )}}selected{{/if}}>
                            Giá tăng dần
                        </option>
                        <option value="newest" {{#if (eq sort 'newest' )}}selected{{/if}}>
                            Mới nhất
                        </option>
                        <option value="best_seller" {{#if (eq sort 'best_seller' )}}selected{{/if}}>
                            Bán chạy nhất
                        </option>
                    </select>
                </div>
            </div>
        </div>
    </div>

    {{!-- Results --}}
    <div class="col-md-9">
        {{!-- Search header --}}
        <div class="mb-3">
            <h4>
                {{#if q}}
                Kết quả tìm kiếm cho "{{q}}"
                {{else if categoryInfo}}
                Khóa học {{categoryInfo.name}}
                {{else}}
                Tất cả khóa học
                {{/if}}
            </h4>
            <p class="text-muted">Tìm thấy {{formatNumber total}} khóa học</p>
        </div>

        {{!-- Course grid --}}
        {{#if hasResults}}
        <div class="row g-3 mb-4">
            {{#each courses}}
            <div class="col-md-4 col-lg-3">
                {{> _courseCard}}
            </div>
            {{/each}}
        </div>

        {{!-- Pagination --}}
        {{#if (length (range 1 totalPages))}}
        <nav aria-label="Course pagination">
            <ul class="pagination justify-content-center">
                <li class="page-item {{#if (eq page 1)}}disabled{{/if}}">
                    <a class="page-link"
                        href="?q={{q}}{{#if categoryId}}&category={{categoryId}}{{/if}}&sort={{sort}}&page={{sub page 1}}">
                        Trước
                    </a>
                </li>

                {{#each (range 1 totalPages)}}
                <li class="page-item {{#if (eq this ../page)}}active{{/if}}">
                    <a class="page-link"
                        href="?q={{../q}}{{#if ../categoryId}}&category={{../categoryId}}{{/if}}&sort={{../sort}}&page={{this}}">
                        {{this}}
                    </a>
                </li>
                {{/each}}

                <li class="page-item {{#if (eq page totalPages)}}disabled{{/if}}">
                    <a class="page-link"
                        href="?q={{q}}{{#if categoryId}}&category={{categoryId}}{{/if}}&sort={{sort}}&page={{add page 1}}">
                        Sau
                    </a>
                </li>
            </ul>
        </nav>
        {{/if}}

        {{else}}
        <div class="alert alert-warning">
            <h5>Không tìm thấy khóa học nào</h5>
            <p>Thử thay đổi từ khóa hoặc bộ lọc</p>
        </div>
        {{/if}}
    </div>
</div>

<script>
    function changeSort() {
        const sort = document.getElementById('sortSelect').value;
        const url = new URL(window.location.href);
        url.searchParams.set('sort', sort);
        url.searchParams.set('page', 1);
        window.location.href = url.toString();
    }

    function filterByCategory(catId) {
        const url = new URL(window.location.href);
        url.searchParams.set('category', catId);
        url.searchParams.set('page', 1);
        window.location.href = url.toString();
    }
</script>