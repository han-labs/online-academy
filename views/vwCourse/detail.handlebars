    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="previewModalLabel">
                    <i class="bi bi-play-circle me-2"></i>Preview Lesson
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body p-0">
                <div id="preview-video-container" class="ratio ratio-16x9 bg-dark">
                    <div id="preview-video-placeholder" class="d-flex flex-column justify-content-center align-items-center text-white w-100 h-100">
                        <div class="spinner-border text-light mb-3" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                        <h5>Loading preview...</h5>
                    </div>
                    <div id="preview-plyr-player" style="display:none;"></div>
                </div>
                <div class="p-3 border-top">
                    <h6 id="preview-lecture-title" class="mb-2 fw-bold"></h6>
                    <p class="text-muted small mb-0">
                        <i class="bi bi-info-circle me-1"></i>
                        This is a preview lesson. Enroll in the course to access all content and features.
                    </p>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">
                    <i class="bi bi-x-circle me-1"></i>Close
                </button>
                {{#unless isEnrolled}}
                <a href="/checkout/{{course.id}}" class="btn text-white fw-semibold" style="background-color: #160438;">
                    <i class="bi bi-cart-check me-2"></i>Enroll Now
                </a>
                {{/unless}}
            </div>
        </div>
    </div>
</div>
<script>
// Video Preview System for Course Detail Page
document.addEventListener('DOMContentLoaded', function() {
    const previewModal = new bootstrap.Modal(document.getElementById('previewModal'));
    let previewPlayer = null;
    
    // Xử lý click preview lecture
    document.querySelectorAll('.preview-lecture').forEach(link => {
        link.addEventListener('click', function(e) {
            e.preventDefault();
            
            const lectureId = this.getAttribute('data-lecture-id');
            const videoUrl = this.getAttribute('data-video-url');
            const lectureTitle = this.getAttribute('data-lecture-title');
            
            console.log('🎬 Opening preview:', { lectureId, videoUrl, lectureTitle });
            
            // Cập nhật modal title
            document.getElementById('preview-lecture-title').textContent = lectureTitle;
            
            // Load video preview
            loadPreviewVideo(videoUrl);
            
            // Hiển thị modal
            previewModal.show();
        });
    });
    
    function loadPreviewVideo(videoUrl) {
        const placeholder = document.getElementById('preview-video-placeholder');
        const playerContainer = document.getElementById('preview-plyr-player');
        
        // Reset trạng thái
        placeholder.style.display = 'flex';
        playerContainer.style.display = 'none';
        playerContainer.innerHTML = '';
        
        console.log('📹 Loading preview video:', videoUrl);
        
        // Kiểm tra nếu là YouTube URL
        const isYouTube = videoUrl.includes('youtube.com') || videoUrl.includes('youtu.be');
        
        setTimeout(() => {
            if (isYouTube) {
                // Xử lý YouTube URL
                const videoId = extractYouTubeId(videoUrl);
                if (videoId) {
                    playerContainer.innerHTML = `
                        <div class="plyr__video-embed" id="youtube-player">
                            <iframe 
                                src="https://www.youtube.com/embed/${videoId}?origin=https://plyr.io&amp;iv_load_policy=3&amp;modestbranding=1&amp;playsinline=1&amp;showinfo=0&amp;rel=0&amp;enablejsapi=1" 
                                allowfullscreen 
                                allowtransparency 
                                allow="autoplay">
                            </iframe>
                        </div>
                    `;
                } else {
                    showPreviewError('Invalid YouTube URL');
                    return;
                }
            } else {
                // Xử lý local video upload
                let finalVideoUrl = videoUrl;
                if (videoUrl && videoUrl.startsWith('uploads/')) {
                    finalVideoUrl = '/' + videoUrl;
                }
                
                playerContainer.innerHTML = `
                    <video id="preview-html5-video" playsinline controls 
                           style="width:100%; height:100%; background:#000;">
                        <source src="${finalVideoUrl}" type="video/mp4">
                        Your browser does not support HTML5 video.
                    </video>
                `;
            }
            
            // Ẩn placeholder, hiện player
            placeholder.style.display = 'none';
            playerContainer.style.display = 'block';
            
            // Khởi tạo Plyr
            initializePreviewPlayer(isYouTube);
        }, 100);
    }
    
    function extractYouTubeId(url) {
        const regExp = /^.*((youtu.be\/)|(v\/)|(\/u\/\w\/)|(embed\/)|(watch\?))\??v?=?([^#&?]*).*/;
        const match = url.match(regExp);
        return (match && match[7].length === 11) ? match[7] : null;
    }
    
    function initializePreviewPlayer(isYouTube = false) {
        // Destroy existing player
        if (previewPlayer) {
            previewPlayer.destroy();
            previewPlayer = null;
        }
        
        const playerElement = isYouTube 
            ? document.getElementById('youtube-player')
            : document.getElementById('preview-html5-video');
            
        if (!playerElement) {
            console.error('❌ Preview player element not found');
            return;
        }
        
        try {
            if (typeof Plyr === 'undefined') {
                loadPlyrCDN().then(() => {
                    initializePlyrPlayer(playerElement, isYouTube);
                });
            } else {
                initializePlyrPlayer(playerElement, isYouTube);
            }
        } catch (error) {
            console.error('❌ Preview player initialization error:', error);
            showPreviewError('Video player initialization failed');
        }
    }
    
    function initializePlyrPlayer(playerElement, isYouTube) {
        previewPlayer = new Plyr(playerElement, {
            controls: [
                'play-large',
                'play',
                'progress',
                'current-time',
                'duration',
                'mute',
                'volume',
                'settings',
                'fullscreen'
            ],
            settings: isYouTube ? [] : ['quality', 'speed'],
            autoplay: true
        });
        
        previewPlayer.on('ready', () => {
            console.log('✅ Preview player ready - YouTube:', isYouTube);
        });
        
        previewPlayer.on('error', (error) => {
            console.error('❌ Preview player error:', error);
            showPreviewError('Cannot load preview video');
        });
    }
    
    function loadPlyrCDN() {
        return new Promise((resolve, reject) => {
            if (document.querySelector('#plyr-css')) {
                resolve();
                return;
            }
            
            // Load CSS
            const link = document.createElement('link');
            link.id = 'plyr-css';
            link.rel = 'stylesheet';
            link.href = 'https://cdn.plyr.io/3.7.8/plyr.css';
            document.head.appendChild(link);
            
            // Load JS
            const script = document.createElement('script');
            script.src = 'https://cdn.plyr.io/3.7.8/plyr.polyfilled.js';
            script.onload = resolve;
            script.onerror = reject;
            document.head.appendChild(script);
        });
    }
    
    function showPreviewError(message) {
        const placeholder = document.getElementById('preview-video-placeholder');
        const playerContainer = document.getElementById('preview-plyr-player');
        
        playerContainer.style.display = 'none';
        placeholder.style.display = 'flex';
        placeholder.innerHTML = `
            <div class="text-center">
                <i class="bi bi-exclamation-triangle display-4 text-warning mb-3"></i>
                <h5 class="text-warning">Preview Unavailable</h5>
                <p class="text-white-50">${message}</p>
            </div>
        `;
    }
    
    // Reset modal khi đóng
    document.getElementById('previewModal').addEventListener('hidden.bs.modal', function() {
        if (previewPlayer) {
            previewPlayer.destroy();
            previewPlayer = null;
        }
        
        // Reset to initial state
        const placeholder = document.getElementById('preview-video-placeholder');
        const playerContainer = document.getElementById('preview-plyr-player');
        
        playerContainer.style.display = 'none';
        playerContainer.innerHTML = '';
        placeholder.style.display = 'flex';
        placeholder.innerHTML = `
            <div class="spinner-border text-light mb-3" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
            <h5>Loading preview...</h5>
        `;
    });
});
</script>
