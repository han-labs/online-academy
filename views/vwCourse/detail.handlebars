<div class="container my-5">
  <h2 class="mb-4 text-center">Danh sách khóa học yêu thích</h2>

  {{#if watchlist.length}}
    <div class="row row-cols-1 row-cols-md-3 g-4">
      {{#each watchlist}}
        <div class="col">
          <div class="card h-100 shadow-sm border-0">
            <img src="{{this.thumbnail}}" class="card-img-top" alt="{{this.title}}">
            <div class="card-body d-flex flex-column">
              <h5 class="card-title">{{this.title}}</h5>
              <p class="card-text text-muted mb-4">{{this.short_description}}</p>
              
              <div class="mt-auto d-flex justify-content-between align-items-center">
                <a href="/courses/{{this.id}}" class="btn btn-sm btn-primary">
                  Xem chi tiết
                </a>

                <form action="/student/watchlist/remove/{{this.id}}" method="post" class="d-inline">
                  <button type="submit" class="btn btn-sm btn-outline-danger">
                    <i class="bi bi-trash"></i> Xóa
                  </button>
                </form>
              </div>
            </div>
          </div>
        </div>
      {{/each}}
    </div>
  {{else}}
    <div class="alert alert-info text-center">
      Bạn chưa thêm khóa học nào vào danh sách yêu thích 
    </div>
  {{/if}}
</div>
