{{!-- vwCourse/detail.handlebars --}}
{{!-- Course Hero Section --}}
<div class="course-hero text-white py-4 mb-4"
    style="background: linear-gradient(135deg, #160438 0%, #2d0a5e 50%, #4a148c 100%);">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-8">
                <nav aria-label="breadcrumb" class="mb-3">
                    <ol class="breadcrumb mb-0" style="background: transparent; padding: 0;">
                        <li class="breadcrumb-item">
                            <a href="/" class="text-white text-decoration-none">
                                <i class="bi bi-house-door me-1"></i>Home
                            </a>
                        </li>
                        <li class="breadcrumb-item">
                            <a href="/categories/{{course.category_id}}" class="text-white text-decoration-none">
                                {{course.category_name}}
                            </a>
                        </li>
                        <li class="breadcrumb-item active text-white-50">{{course.title}}</li>
                    </ol>
                </nav>

                <h1 class="display-6 fw-semibold mb-2">{{course.title}}</h1>

                <p class="lead text-white-50 mb-3">{{course.short_description}}</p>

                <div class="d-flex align-items-center flex-wrap mb-3">
                    <span class="me-2 text-warning fw-bold"><i class="bi bi-star-fill"></i> {{formatNumber
                        course.rating}}</span>
                    <span class="me-3 small text-white-50">({{formatNumber course.rating_count}} ratings)</span>
                    <span class="small text-white-50">{{formatNumber course.students}} students</span>
                </div>

                <p class="small mb-1">Created by <strong>{{course.instructor_name}}</strong></p>
                <p class="small text-white-50 mb-0">Last updated {{formatDate course.last_updated}} •
                    {{totalHours}}h{{remainingMinutes}}m</p>
            </div>

            {{!-- Tìm phần button trong course-card-hero --}}
            <div class="col-lg-4 mt-4 mt-lg-0">
                <div class="course-card-hero bg-white text-dark p-3 rounded-3 shadow-lg">
                    <img src="{{course.image_url}}" alt="{{course.title}}" class="img-fluid rounded mb-3">

                    {{#ifPromo course.price course.promotional_price}}
                    <div class="h4 text-danger fw-bold mb-1">{{formatNumber course.promotional_price}}₫</div>
                    <div class="text-muted text-decoration-line-through small mb-3">{{formatNumber course.price}}₫</div>
                    {{else}}
                    <div class="h4 fw-bold mb-3">{{formatNumber course.price}}₫</div>
                    {{/ifPromo}}

                    {{#if user}}
                    {{#if (eq user.role 'student')}}
                    {{#if isEnrolled}}
                    {{#if isCompleted}}
                    <!-- Nếu đã hoàn thành khóa học -->

                    <div class="mb-2">
                        <span class="badge bg-success fs-6 py-2 px-3">
                            <i class="bi bi-check-circle-fill me-1"></i>Course Completed
                        </span>
                    </div>

                    <a href="{{keepLearningUrl}}" class="btn btn-success w-100 mb-2 fw-semibold text-white">
                        <i class="bi bi-arrow-repeat me-2"></i>Learn Again
                    </a>
                    {{else}}
                    <!-- Nếu đang học chưa hoàn thành -->
                    <div class="mb-2">
                        <span class="badge fs-6 py-2 px-3 text-white" style="background-color:#00bfff;">
                            <i class="bi bi-check-circle-fill me-1"></i> In Progress
                        </span>

                    </div>
                    <a href="{{keepLearningUrl}}" class="btn btn-brand w-100 mb-2 fw-semibold text-white"
                        style="background-color:#160438;">
                        <i class="bi bi-play-circle me-2"></i>Keep Learning
                    </a>
                    {{/if}}
                    {{else}}
                    <!-- Nếu chưa ghi danh -->
                    <a href="/checkout/{{course.id}}" class="btn btn-brand w-100 mb-2 fw-semibold text-white"
                        style="background-color:#160438;">
                        <i class="bi bi-cart-check me-2"></i>Enroll Now
                    </a>
                    {{/if}}

                    {{!-- Favorites: giữ nguyên logic --}}
                    {{#if isInWatchlist}}
                    <form action="/student/watchlist/remove" method="POST" class="w-100">
                        <input type="hidden" name="course_id" value="{{course.id}}">
                        <button type="submit" class="btn btn-outline-secondary w-100">
                            <i class="bi bi-heart-fill"></i> Remove from Favorites
                        </button>
                    </form>
                    {{else}}
                    <form action="/student/watchlist/add" method="POST" class="w-100">
                        <input type="hidden" name="course_id" value="{{course.id}}">
                        <button type="submit" class="btn btn-outline-secondary w-100">
                            <i class="bi bi-heart"></i> Add to Favorites
                        </button>
                    </form>
                    {{/if}}
                    {{/if}}
                    {{else}}
                    <!-- Guest: gợi ý đăng nhập để học -->
                    <a href="/account/login" class="btn btn-brand w-100 mb-2 fw-semibold text-white"
                        style="background-color:#160438;">
                        <i class="bi bi-box-arrow-in-right me-2"></i>Log in to enroll
                    </a>
                    {{/if}}
                </div>
            </div>
        </div>
    </div>
</div>


{{!-- Course Content --}}
<div class="row">
    <div class="col-md-8">
        {{!-- What you'll learn --}}
        <div class="card mb-4 border-0 shadow-sm">
            <div class="card-header text-white" style="background-color: #160438;">
                <h5 class="mb-0"><i class="bi bi-lightbulb me-2"></i>What you'll learn</h5>
            </div>
            <div class="card-body">
                <p class="mb-0">{{course.detailed_description}}</p>
            </div>
        </div>

        {{!-- Curriculum --}}
        {{!-- Curriculum --}}
<div class="card mb-4 border-0 shadow-sm">
    <div class="card-header" style="background-color: #f8f9fa;">
        <h5 class="mb-1"><i class="bi bi-list-ul me-2"></i>Course Content</h5>
        <p class="text-muted mb-0 small">
            {{totalChapters}} chapters • {{totalLectures}} lectures • {{totalHours}}h{{remainingMinutes}}m
        </p>
    </div>
    <div class="card-body p-0">
        <div class="accordion" id="curriculumAccordion">
            {{#each chapters}}
            <div class="accordion-item border-0 border-bottom">
                <h2 class="accordion-header">
                    <button class="accordion-button {{#unless @first}}collapsed{{/unless}}" type="button"
                        data-bs-toggle="collapse" data-bs-target="#chapter{{id}}"
                        style="background-color: #f8f9fa;">
                        <strong>{{title}}</strong>
                        <span class="text-muted ms-auto me-3 small">{{length lectures}} lectures</span>
                    </button>
                </h2>
                <div id="chapter{{id}}" class="accordion-collapse collapse {{#if @first}}show{{/if}}"
                    data-bs-parent="#curriculumAccordion">
                    <div class="accordion-body p-0">
                        <ul class="list-group list-group-flush">
                            {{#each lectures}}
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <div class="d-flex align-items-center flex-grow-1">
                                    <span class="me-2" style="color: #160438;">
                                        <i class="bi bi-play-circle"></i>
                                    </span>
                                    
                                    {{!-- LOGIC MỚI --}}
                                    {{#if @root.isEnrolled}}
                                        {{!-- Đã đăng ký: link đến learn page --}}
                                        <a href="/courses/{{@root.course.id}}/learn?lecture={{id}}" 
                                           class="text-decoration-none text-dark flex-grow-1">
                                            {{title}}
                                        </a>
                                    {{else}}
                                        {{!-- Chưa đăng ký: xử lý preview --}}
                                        {{#if is_preview_allowed}}
                                            <a href="#" class="text-decoration-none text-dark flex-grow-1 preview-lecture"
                                               data-lecture-id="{{id}}"
                                               data-video-url="{{video_url}}"
                                               data-lecture-title="{{title}}">
                                                {{title}}
                                            </a>
                                            <span class="badge ms-2" style="background-color: #160438;">Preview</span>
                                        {{else}}
                                            <span class="text-dark flex-grow-1">{{title}}</span>
                                            <span class="badge ms-2 bg-secondary">Enroll to view</span>
                                        {{/if}}
                                    {{/if}}
                                </div>
                                <span class="text-muted small ms-3">{{duration_minutes}} min</span>
                            </li>
                            {{/each}}
                        </ul>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</div>

        {{!-- Instructor --}}
        <div class="card mb-4 border-0 shadow-sm">
            <div class="card-header" style="background-color: #f8f9fa;">
                <h5 class="mb-0"><i class="bi bi-person-badge me-2"></i>Instructor</h5>
            </div>
            <div class="card-body">
                <div class="d-flex align-items-start">
                    {{#if course.instructor_avatar}}
                    <img src="{{course.instructor_avatar}}" alt="{{course.instructor_name}}" class="rounded-circle me-3"
                        style="width: 80px; height: 80px; object-fit: cover;">
                    {{else}}
                    <div class="rounded-circle text-white d-flex align-items-center justify-content-center me-3"
                        style="width: 80px; height: 80px; font-size: 2rem; background-color: #160438;">
                        {{substring course.instructor_name 0 1}}
                    </div>
                    {{/if}}
                    <div>
                        <h5 class="mb-1">{{course.instructor_name}}</h5>
                        <p class="text-muted mb-0">{{course.instructor_bio}}</p>
                    </div>
                </div>
            </div>
        </div>

        {{!-- Reviews --}}
        <div class="card mb-4 border-0 shadow-sm">
            <div class="card-header d-flex justify-content-between align-items-center"
                style="background-color: #f8f9fa;">
                <h5 class="mb-0"><i class="bi bi-star me-2"></i>Student Reviews</h5>
                <div>
                    <span class="badge text-white" style="background-color: #160438;">
                        <i class="bi bi-star-fill text-warning"></i> {{formatNumber course.rating}}
                    </span>
                    <span class="text-muted ms-2">({{formatNumber course.rating_count}})</span>
                </div>
            </div>
            <div class="card-body">
                {{#if reviews}}
                {{#each reviews}}
                <div class="mb-3 pb-3 {{#unless @last}}border-bottom{{/unless}}">
                    <div class="d-flex align-items-center mb-2">
                        {{#if user_avatar}}
                        <img src="{{user_avatar}}" alt="{{user_name}}" class="rounded-circle me-2"
                            style="width: 40px; height: 40px; object-fit: cover;">
                        {{else}}
                        <div class="rounded-circle text-white d-flex align-items-center justify-content-center me-2"
                            style="width: 40px; height: 40px; background-color: #160438;">
                            {{substring user_name 0 1}}
                        </div>
                        {{/if}}
                        <div>
                            <strong>{{user_name}}</strong>
                            <div class="small text-muted">{{formatDate created_at}}</div>
                        </div>
                    </div>
                    <div class="mb-1">{{#each (range 1 rating)}}<i class="bi bi-star-fill text-warning"></i>{{/each}}
                    </div>
                    <p class="mb-0">{{comment}}</p>
                </div>
                {{/each}}
                {{else}}
                <p class="text-muted mb-0">No reviews yet</p>
                {{/if}}
            </div>
        </div>
    </div>

    {{!-- Sidebar --}}
    <div class="col-md-4">
        {{#if related}}
        <div class="card border-0 shadow-sm">
            <div class="card-header" style="background-color: #f8f9fa;">
                <h5 class="mb-0"><i class="bi bi-collection me-2"></i>Related Courses</h5>
            </div>
            <div class="card-body p-2">
                {{#each related}}
                <div class="card mb-2 border-0 shadow-sm">
                    <a href="/courses/{{id}}" class="text-decoration-none">
                        <img src="{{cover}}" class="card-img-top" alt="{{title}}"
                            style="height: 150px; object-fit: cover;">
                    </a>
                    <div class="card-body p-2">
                        <h6 class="card-title mb-1">
                            <a href="/courses/{{id}}" class="text-decoration-none text-dark">{{title}}</a>
                        </h6>
                        <div class="small text-muted mb-1">{{instructor_name}}</div>
                        <div class="small mb-1">
                            <i class="bi bi-star-fill text-warning"></i> {{formatNumber rating}} ({{formatNumber
                            rating_count}})
                        </div>
                        {{#ifPromo price promo_price}}
                        <div class="fw-bold text-danger">{{formatNumber promo_price}}₫</div>
                        {{else}}
                        <div class="fw-bold">{{formatNumber price}}₫</div>
                        {{/ifPromo}}
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
        {{/if}}
    </div>
</div>
